<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h2>Log In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
