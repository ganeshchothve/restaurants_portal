<%= form_with(model: restaurant, remote: true, id: 'new-restaurant-form') do |form| %>
  <div class="form-group m-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group m-3">
    <%= form.label :address %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Restaurant', class: 'btn btn-primary m-3' %>
<% end %>
