<%= form_with(model: @dish, remote: true, id: 'new-dish-form') do |form| %>
  <div class="form-group mt-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <% if @restaurant.blank? %>
    <div class="form-group mt-3">
      <%= form.label :restaurant_id %>
      <%= form.collection_select :restaurant_id, Restaurant.all, :id, :name, { prompt: true }, class: 'form-control' %>
    </div>
  <% else %>
    <%= form.hidden_field :restaurant_id, value: @restaurant.id, class: 'form-control' %>
  <% end %>

  <%= form.submit 'Create Dish', class: 'btn btn-primary mt-3' %>
<% end %>
