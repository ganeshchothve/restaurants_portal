<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h2>Edit Profile</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, placeholder: 'Email', class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: 'New Password (Leave blank to keep current)', class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: 'Confirm New Password', class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.password_field :current_password, placeholder: 'Current Password (Required to update profile)', class: 'form-control mb-3' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>
      <p>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-block" %>
      </p>
    </div>
  </div>
</div>
